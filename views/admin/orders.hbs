<main id="main" class="main">

    <div class="pagetitle">
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/admin">Home</a></li>
                <li class="breadcrumb-item">Orders</li>
                <li class="breadcrumb-item active"></li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Orders</h5>

                        <table class="table datatable">
                            <thead>
                                <tr>
                                    <th scope="col">Date</th>
                                    <th scope="col">Order No.</th>
                                    <th scope="col">Customer</th>
                                    <th scope="col">Payment</th>
                                    <th scope="col">Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each orders}}
                                <tr>
                                    <td id="date">{{this.order.date}}</td>
                                    <td><a onclick="hi('{{this.order._id}}')" href="/admin/orders/details?orderId={{this.order._id}}&userId={{this.order.user}}" style="color: black;">{{this.order.orderNo}}</a></td>
                                    <td>{{this.order.address.name}}</td>
                                    <td>{{this.order.paymentMethod}}</td>
                                    <td>{{this.order.status}}</td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                        <!-- End Table with stripped rows -->

                    </div>
                </div>

            </div>
        </div>
    </section>

</main><!-- End #main -->







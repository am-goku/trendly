<script>
  function getSales(period) {
    $.ajax({
      url: '/admin/getSales',
      method: 'POST',
      data: {time: period},
      success: function(response){
        updateSalesCard(period, response.sales);
        console.log(response.sales.length)
      }
    })
  }; getSales('day')

  function updateSalesCard(period, sales){
    document.getElementById('totalSales').innerHTML = sales.length;
    if(period == 'day'){
      document.getElementById('salesDay').innerHTML = 'Today'
    } else if(period == 'month'){
      document.getElementById('salesDay').innerHTML = 'This Month'
    } else {
      document.getElementById('salesDay').innerHTML = 'This Year'
    }
  }

  
</script>

{{!-- scripts to update revenue Card --}}
<script>
  function getReveue(period) {
    $.ajax({
      url: '/admin/getSales',
      method: 'POST',
      data: { time: period },
      success: function (response) {
        updateReveueCard(period, response.sales);
      }
    })
  }; getReveue('day');

  function updateReveueCard(period, sales) {
    let totalRevenue = 0;

    for (let i = 0; i < sales.length; i++) {
      totalRevenue += sales[i].order.totalAmount;
    }
    let revenue = '' + totalRevenue, xt = []
    for (let i = 0; i < revenue.length; i++) {
      xt.push(revenue[i])
      if (revenue.length % 2 == 0) {
        if (i % 2 == 0) {
          if (i <= revenue.length - 4) {
            xt.push(',')
          }
        }
      } else {
        if (i % 2 !== 0) {
          if (i <= revenue.length - 4) {
            xt.push(',')
          }
        }
      }
    }
    
    document.getElementById('totalRevenue').innerHTML = xt.join('');


    if (period == 'day') {
      document.getElementById('revenueDay').innerHTML = 'Today'
    } else if (period == 'month') {
      document.getElementById('revenueDay').innerHTML = 'This Month'
    } else {
      document.getElementById('revenueDay').innerHTML = 'This Year'
    }
  }
</script>

